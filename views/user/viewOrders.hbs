<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div>
            <br><br><br><br>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <h4 class="card-title">All Orders</h4>
            </header>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Sl. No.</th>
                                    {{!-- <th class="align-middle" scope="col">Order ID</th> --}}
                                    <th class="align-middle" scope="col">Date</th>
                                    {{!-- <th class="align-middle" scope="col">Billing Name</th> --}}
                                    <th class="align-middle" scope="col">Address</th>
                                    {{!-- <th class="align-middle" scope="col">Pincode</th> --}}
                                    {{!-- <th class="align-middle" scope="col">Mobile</th> --}}
                                    <th class="align-middle" scope="col">Total</th>
                                    <th class="align-middle" scope="col">Status</th>
                                    <th class="align-middle" scope="col">Payment Method</th>
                                    <th class="align-middle" scope="col">View Details</th>
                                    <th class="align-middle" scope="col">Cancel</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    <td scope="row">{{@index}}</td>
                                    <td>{{this.date}}</td>
                                    {{!-- <td><a class="fw-bold">{{this._id}}</a> </td> --}}
                                    {{!-- <td>{{this.deliveryDetails.name}}</td> --}}
                                    <td>
                                        <span>{{this.deliveryDetails.name}},</span>
                                        <span>{{this.deliveryDetails.address}}
                                        </span><br>
                                        <span>{{this.deliveryDetails.pincode}}</span>
                                    </td>
                                    {{!-- <td>{{this.deliveryDetails.address}}</td> --}}
                                    {{!-- <td>{{this.deliveryDetails.pincode}}</td> --}}
                                    {{!-- <td>{{this.deliveryDetails.mobile}}</td> --}}
                                    <td>â‚¹{{this.totalAmount}}</td>
                                    <td>
                                        <span class="badge badge-pill badge-soft-success">{{this.status}}</span>
                                        {{!-- <div class="">
                                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button"
                                                id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                                {{this.status}}
                                            </button>

                                        </div> --}}
                                    </td>
                                    <td>
                                        <i class="material-icons md-payment font-xxl text-muted mr-5"></i>
                                        {{this.PaymentMethod}}
                                    </td>
                                    <td>
                                        <a href="/singleOrderDetailUser/{{this._id}}" class="btn btn-xs">
                                            View details</a>
                                    </td>
                                    {{#if this.isCancelled}}
                                    <td>
                                        <a href="" class="btn btn-xs disabled" style="background-color: crimson;">
                                            ORDER CANCELLED</a>
                                    </td>
                                    {{else if this.isDelivered}}
                                    <td>
                                        <a href="" class="btn btn-xs disabled"
                                            style="background-color: rgb(228, 143, 24);">
                                            CANCEL ORDER</a>
                                    </td>
                                    {{else}}
                                    <td>
                                        <a href="/cancelOrder/{{this._id}}" class="btn btn-xs cancelOrder"
                                            style="background-color: crimson;">
                                            CANCEL ORDER</a>
                                    </td>
                                    {{/if}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div> <!-- table-responsive end// -->
            </div>
        </div>
    </div>
</section>

