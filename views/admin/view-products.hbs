<main class="main-wrap">
    <section>
        <div class="container">
            <div class="row">
                <div class="mt-3 d-flex"><a href="/admin/add-product" class="btn color-block mb-5 ms-auto"
                        style="background-color: #c89237;">Add
                        Product</a></div>
            </div>
            <h4 class="py-4 text-center">Product Management</h4>
            <div class=" mt-5">
                <table class="table table-striped table-bordered table-responsive mt-5 display" style="padding-top:30px"
                    id="uproductTable">
                    <thead>
                        <tr>
                            <th scope="col">No:</th>

                            <th scope="col">Product Name</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Price</th>
                            <th scope="col">Status</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{increment @index}}</td>

                            <td>
                                <a class="itemside" href="#">
                                    <div class="left">
                                        <img src="{{this.image.[0]}}" class="img-sm img-thumbnail" alt="Item">
                                    </div>

                                    <div class="info">
                                        <h6 class="mb-0">{{this.name}}</h6>
                                    </div>
                                </a>
                            </td>
                            {{#if this.stock}}
                            <td><span>{{this.stock}}</span></td>
                            {{else}}
                            <td class="text-danger">out of stock</td>
                            {{/if}}
                            <td><span>{{this.price}}</span></td>
                            {{#if this.status}}
                            <td><a href="/admin/unlistProduct/{{this._id}}" class="btn btn-danger btn-sm">UNLIST</a>
                            </td>
                            {{else}}
                            <td><a href="/admin/listProduct/{{this._id}}" class="btn btn-warning btn-sm"
                                    style="width:70px">LIST</a>
                            </td>
                            {{/if}}
                            <td><a href="/admin/editProduct/{{this._id}}" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>

<script>

    $(document).ready(function () {
        $('#uproductTable').DataTable();
    });

</script>