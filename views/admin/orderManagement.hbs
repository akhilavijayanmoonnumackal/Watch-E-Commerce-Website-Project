<main class="main-wrap">
    <div class="card mb-4">
        <header class="card-header">
            <h4 class="card-title">All Orders</h4>

        </header>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                {{!-- <th scope="col" class="text-center">
                                    <div class="form-check align-middle">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck01">
                                        <label class="form-check-label" for="transactionCheck01"></label>
                                    </div>
                                </th> --}}
                                <th scope="col">Sl. No.</th>
                                <th class="align-middle" scope="col">Order ID</th>
                                <th class="align-middle" scope="col">Billing Name</th>
                                <th class="align-middle" scope="col">Date</th>
                                <th class="align-middle" scope="col">Total</th>
                                <th class="align-middle" scope="col">Status</th>
                                <th class="align-middle" scope="col">Payment Method</th>
                                <th class="align-middle" scope="col">View Details</th>
                                <th class="align-middle" scope="col">Cancel</th>
                                <th class="align-middle" scope="col">Shipping</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td scope="row">{{@index}}</td>
                                {{!-- <td class="text-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                        <label class="form-check-label" for="transactionCheck02"></label>
                                    </div>
                                </td> --}}
                                <td><a class="fw-bold">{{this._id}}</a> </td>
                                <td>{{this.deliveryDetails.name}}</td>
                                <td>
                                    {{this.date}}
                                </td>
                                <td>
                                    â‚¹{{this.totalAmount}}
                                </td>
                                <td>
                                    {{!-- <span class="badge badge-pill badge-soft-success">{{this.status}}</span> --}}
                                    {{!-- <div class="dropdown">
                                        <span class="badge badge-pill badge-soft-success dropdown-toggle" role="button"
                                            id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                            {{this.status}}
                                        </span>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="badge badge-pill badge-soft-success dropdown-toggle"
                                                href="#">Shipped</a>
                                            <a class="badge badge-pill badge-soft-success dropdown-toggle"
                                                href="#">Delivered</a>
                                            <a class="badge badge-pill badge-soft-success dropdown-toggle"
                                                href="#">Cancel</a>
                                        </div>
                                    </div> --}}
                                    <div class="dropdown">
                                        <span class="badge badge-pill badge-soft-success">{{this.status}}</span>
                                    </div>
                                </td>
                                <td>
                                    <i class="material-icons md-payment font-xxl text-muted mr-5"></i>
                                    {{this.PaymentMethod}}
                                </td>
                                <td>
                                    <a href="/admin/singleOrderDetail/{{this._id}}" class="btn btn-xs">
                                        View details</a>
                                </td>
                                {{#if this.isCancelled}}
                                <td>
                                    <a href="/admin/singleOrderDetail/{{this._id}}" class="btn btn-xs disabled"
                                        style="background-color: rgb(228, 24, 24);">
                                        Order Cancelled</a>
                                </td>
                                {{else if this.isDelivered}}
                                <td>
                                    <a href="" class="btn btn-xs disabled" style="background-color: rgb(82, 228, 24);">
                                        Cancel Order</a>
                                </td>
                                {{else if this.isShipped}}
                                <td>
                                    <a href="" class="btn btn-xs disabled" style="background-color: rgb(228, 143, 24);">
                                        Order Shipped</a>
                                </td>
                                {{else}}
                                <td>
                                    <a href="/admin/cancelOrder/{{this._id}}" class="btn btn-xs disabled">
                                        Cancel Order</a>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div> <!-- table-responsive end// -->
        </div>
    </div>
</main>