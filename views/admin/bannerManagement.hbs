<main class="main-wrap">
  <section>
    <div class="container">
      <div class="row">
        <div class="mt-3 d-flex"><a href="/admin/add-banner" class="btn color-block mb-5 ms-auto"
            style="background-color: #c89237;">Add Banner</a>
        </div>
      </div>
      {{!-- <div>
        <a href="/admin/add-banner" class="btn btn-success float-right mb-3">Add Banner</a>
      </div> --}}

      <h4 class="py-4 text-center">Banners Management</h4>
      <div class="mt-5">
        <table class="table table-striped table-bordered table-responsive mt-5 display" style="padding-top:30px"
          id="bannerTable">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Image</th>
              <th scope="col">Banner Head</th>
              <th scope="col">Banner text</th>
              {{!-- <th scope="col">Update</th> --}}
              <th scope="col">status</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each banner}}
            <tr>
              <th scope="row">{{increment @index}}</th>
              <td>
                <img src="{{this.image}}" alt="" width="120px" />
              </td>
              <td>{{this.head}}</td>
              <td>{{this.text}}</td>
              {{!-- <td><a href="/admin/edit-banner/{{this._id}}" class="btn btn-primary btn-sm"
                  style="width: 100px;height:35px;">EDIT</a>
              </td> --}}
              {{!-- <td><a href="" class="btn btn-primary btn-sm" style="width: 100px;height:35px;" data-toggle="modal"
                  data-target="#exampleModalCenterBannerEdit{{this._id}}">EDIT</a>
              </td> --}}
              {{#if this.status}}
              <td>
                <a href="/admin/unlist-banner/{{this._id}}" class="btn btn-danger btn-sm">UNLIST</a>
              </td>
              {{else}}
              <td>
                <a href="/admin/list-banner/{{this._id}}" class="btn btn-warning btn-sm">LISTED</a>
              </td>
              {{/if}}
              <td>
                <a href="/admin/deleteBanner/{{this._id}}" class="btn btn-danger btn-sm"
                  onclick="return confirm('Do you want to delete?')">Delete</a>
              </td>

            </tr>
            {{/each}}

          </tbody>
        </table>

      </div>

    </div>
  </section>
</main>


