<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a href="/" class="logo">
                    <img src="/images/icons/cozastorelogo2.png" alt="IMG-LOGO" style="height: 100px;width:100px">
                </a>

                <!-- Menu desktop -->
                <div class=" menu-desktop">
                    <ul class="main-menu">
                        <li class="">
                            <a href="/">HOME</a>
                        </li>
                        <li>
                            <a href="/shop">SHOP</a>
                        </li>
                        <li class="">
                            <a href="/viewOrders">ORDERS</a>
                        </li>

                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    <li class="text-warning">
                        {{#if user}}
                        <ul class="nav">
                            <li class="dropdown nav-item">
                                <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                                    aria-expanded="false">
                                    <i class="icon material-icons md-person" style="color: rgb(160, 162, 162);"></i>
                                    {{!-- <img class="img-xs rounded-circle" style="width:50px;height:50px; "
                                        src="/images/profile.png" alt="User"> --}}
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                                    {{#if user.name}}
                                    <a class="dropdown-item text-danger" href="/logout"><i
                                            class="material-icons md-exit_to_app"></i>LOGOUT</a>
                                    {{else}}
                                    <a href="/login"></a>
                                    {{/if}}
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li><a href="/userProfile">
                    <li>
                        <button class=" text" type="button"
                            style="margin-left: 15px;color:rgb(193, 108, 149)">{{user.name}}</button>
                    </li>
                    </a>
                    {{else}}
                    <a href="/login">
                        <li><button class="text-muted" type="button" style="font-weight: 600;">LOGIN</button>
                        </li>
                    </a>
                    {{/if}}
                    </li>
                    <div id="cart-count">
                        <div class=" icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart"
                            data-notify="{{cartCount}}">
                            <a href=" /cart">
                                <i class="zmdi zmdi-shopping-cart" style="color:#a3a3a3"></i>
                            </a>
                        </div>
                    </div>
                    <div id="wishlist-count">
                        <a href=" /wishList"
                            class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-wishlist"
                            data-notify="{{wishlistCount}}">
                            <i class="zmdi zmdi-favorite-outline"></i>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="/">
                <img src="/images/icons/cozastorelogo2.png" alt="IMG-LOGO" style="height: 100px;width:100px">
            </a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            <div id="cart-count">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart"
                    data-notify="{{cartCount}}">
                    <a href="/cart"><i class="zmdi zmdi-shopping-cart"></i></a>
                </div>
            </div>
            <div id="wishlist-count">
                <a href="/wishList"
                    class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-wishlist"
                    data-notify="{{wishlistCount}}">
                    <i class="zmdi zmdi-favorite-outline"></i>
                </a>
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>



    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>
            </li>
        </ul>
        <ul class="main-menu-m">
            <li>
                <a href="/">HOME</a>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </li>
            <li>
                <a href="/shop">SHOP</a>
            </li>
            <li>
                <a href="/userProfile">PROFILE</a>
            </li>
            <li>
                {{#if user}}
                <a href="/logout">LOGOUT</a>
                {{else}}
                <a href="/logout">LOGIN</a>
                {{/if}}
            </li>
        </ul>
    </div>
</header>